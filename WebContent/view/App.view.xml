<mvc:View
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="opensap.myapp.controller.App">
	<Carousel>
		<Image 		src="https://cdn.audubon.org/cdn/farfuture/L4scWK3VrCdHBvP7jjsho5FIB4grR1u6IRy6lwTUm9s/mtime:1528408709/sites/default/files/styles/hero_image/public/guide_a1_3701_6_lazuli-bunting_melissa_james_kk.jpg?itok=SpSAzgQ7"
				height="600px"/>
			<Image		src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/86/Wikipedia_Hello_World_Graphic.svg/2000px-Wikipedia_Hello_World_Graphic.svg.png"
				height="600px"/>
		
	</Carousel>
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello"/>
	<Input
		value="{helloPanel>/recipient/name}"
		description="Hello {helloPanel>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"/>
	
</mvc:View>
